<%- include("./partials/header") %>

<div style="border: solid 1px gray; padding: 10px">
  

      
    <form action="/new" method="POST">

        <div class="form-group">
            <label for="username" style="color: lightgrey">Content</label>
            <textarea
            name="content"
            cols="60" rows="8"
            class="form-control"
            placeholder="Whatchoo cluckin' 'bout?"></textarea>
        </div>

        <div class="form-group">
            <label for="username" style="color: lightgrey">Image Url</label>
            <input
            type="text"
            class="form-control"
            name="image_Url"
            placeholder="e.g. http://imgur.com/myPic.jpg"
            />
        </div>

        <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Cluckr !</button>
    </form>
</div>

